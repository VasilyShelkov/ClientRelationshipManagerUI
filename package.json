{
  "name": "ClientRelationshipManagerUI",
  "version": "1.0.0",
  "description": "Web client for CRM graphql api",
  "main": "index.html",
  "engines": {
    "node": "7.4.0"
  },
  "scripts": {
    "start": "npm run start:server-only",
    "start:server-only": "node server.js",
    "start:dev": "webpack-dashboard -- webpack-dev-server --open --config webpack/webpack.config.dev.js --progress",
    "start:staging": "npm run build:staging && node server.js",
    "prebuild": "rimraf dist",
    "build": "webpack --config webpack/webpack.config.prod.js --progress --profile --colors",
    "build:staging": "NODE_ENV=staging webpack --config webpack/webpack.config.prod.js --progress --profile --colors",
    "heroku-postbuild": "npm run build:staging",
    "test": "NODE_ENV=testing nyc --reporter=lcov --reporter=text mocha --opts ./mocha.opts './src/**/*.spec.js'",
    "test:watch": "NODE_ENV=testing mocha --watch --opts ./mocha.opts './src/**/*.spec.js'",
    "test:feature": "./node_modules/codeceptjs/bin/codecept.js run --steps",
    "test:feature:staging": "NODE_ENV=staging ./node_modules/codeceptjs/bin/codecept.js run",
    "test:feature:selenium-install": "./node_modules/.bin/selenium-standalone install",
    "test:feature:selenium-start": "./node_modules/.bin/selenium-standalone start",
    "lint:prettier": "prettier --write --single-quote --print-width 120 'src/**/*.js'",
    "precommit": "bash checkForOnly.sh && lint-staged && npm test",
    "report-coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write --single-quote --print-width 120",
      "git add"
    ]
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VasilyShelkov/ClientRelationshipManagerUI.git"
  },
  "author": "Vasily Shelkov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/VasilyShelkov/ClientRelationshipManagerUI/issues"
  },
  "homepage": "https://github.com/VasilyShelkov/ClientRelationshipManagerUI#readme",
  "dependencies": {
    "apollo-client": "^1.0.3",
    "axios": "^0.16.1",
    "babel-core": "^6.20.0",
    "babel-loader": "^6.2.9",
    "babel-plugin-istanbul": "^4.1.3",
    "babel-plugin-lodash": "^3.2.11",
    "babel-polyfill": "^6.20.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "compression": "^1.6.2",
    "coveralls": "^2.13.1",
    "css-loader": "^0.28.0",
    "express": "^4.14.0",
    "extract-text-webpack-plugin": "^2.1.0",
    "fuse.js": "^2.6.2",
    "graphql-tag": "^2.0.0",
    "html-webpack-plugin": "^2.24.1",
    "js-cookie": "^2.1.3",
    "lodash": "^4.17.4",
    "material-ui": "^0.17.4",
    "mocha-graphql-register": "git+https://git@github.com/VasilyShelkov/mocha-graphql-register.git",
    "mocha-lcov-reporter": "^1.3.0",
    "moment": "^2.18.1",
    "node-sass": "^4.5.1",
    "nyc": "^10.3.2",
    "places.js": "^1.4.8",
    "postcss-loader": "^1.2.0",
    "react": "15.4.2",
    "react-apollo": "1.0.1",
    "react-dom": "15.4.2",
    "react-hot-loader": "^3.0.0-beta.6",
    "react-list": "^0.8.4",
    "react-redux": "^5.0.3",
    "react-router": "^3.0.0",
    "react-router-redux": "^4.0.7",
    "react-tap-event-plugin": "^2.0.1",
    "redux": "^3.6.0",
    "redux-devtools-extension": "2.13.0",
    "redux-form": "^6.6.3",
    "redux-form-material-ui": "4.1.2",
    "redux-localstorage": "^1.0.0-rc5",
    "redux-localstorage-filter": "^0.1.1",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.3",
    "style-loader": "^0.16.1",
    "webpack": "^2.3.2",
    "webpack-validator": "^3.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.5.3",
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.2.1",
    "babel-register": "^6.22.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "codeceptjs": "0.6.3",
    "enzyme": "^2.8.0",
    "eslint": "^3.18.0",
    "eslint-config-prettier": "^1.7.0",
    "eslint-plugin-prettier": "^2.0.1",
    "eslint-plugin-react": "^6.10.3",
    "extend": "^3.0.0",
    "faker": "^4.1.0",
    "ignore-styles": "^5.0.1",
    "jsdom": "^9.9.1",
    "lint-staged": "^3.4.1",
    "mocha": "^3.2.0",
    "mocha-graphql-register": "^1.0.0",
    "prettier": "^1.3.1",
    "react-addons-test-utils": "^15.4.1",
    "selenium-standalone": "^6.1.0",
    "selenium-webdriver": "^3.3.0",
    "sinon": "^2.1.0",
    "sinon-chai": "^2.9.0",
    "sinon-test": "^1.0.1",
    "webdriverio": "^4.6.1",
    "webpack-dashboard": "^0.3.0",
    "webpack-dev-server": "^2.4.2"
  }
}
